<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:id="@+id/categoriesDrawer"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".categories">

<!-- Your existing content layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- App Logo with smaller size -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/app_logo"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TICKTAKE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/appLogo"
            android:layout_marginEnd="16dp"/>

        <!-- Notification Button aligned to the end of the screen -->
        <ImageView
            android:id="@+id/notificationButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/baseline_circle_notifications_24"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>



    <!-- Search box containing, sort and search -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id="@+id/searchBox">

        <!-- Search Icon, Search Bar, and Filter Icon -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_search_24"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:background="@android:color/transparent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:textSize="20dp"
            android:textColorHint="@color/black"/>

        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_sort_24"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>


    <!-- Scroll View for event cards -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <!-- Main container where cards will be created -->
        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewEvents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/accentRed"/>

            <!-- Select Your Favorite Event Text -->
            <TextView
                android:id="@+id/textViewSelectEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your favorite events"
                android:textSize="20sp"
                android:layout_marginBottom="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/eventCardRecycler"/>

            <!-- Card code -->

        </LinearLayout>
    </LinearLayout>


    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accentRed"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/design_default_color_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="32dp">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>

<!-- Drawer layout for filter options -->
<RelativeLayout
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white">

    <!-- Add your category cards here -->
    <!-- For simplicity, I'm using TextViews as placeholders, replace them with your ImageView and other views as needed -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Category 1"
        android:gravity="center_vertical"
        android:paddingStart="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Category 2"
        android:gravity="center_vertical"
        android:paddingStart="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Category 3"
        android:gravity="center_vertical"
        android:paddingStart="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Category 4"
        android:gravity="center_vertical"
        android:paddingStart="16dp"/>

</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
