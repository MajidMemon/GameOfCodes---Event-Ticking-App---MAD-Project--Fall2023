<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signuppage"
    android:padding="16dp"
    tools:context=".loginActivity">


    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:background="@drawable/edittext_border"
        android:hint="Username"
        android:padding="12dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="725dp" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:background="@drawable/edittext_border"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="1049dp" />

    <TextView
        android:id="@+id/signupRedirect"
        android:layout_width="804dp"
        android:layout_height="273dp"
        android:gravity="center"
        android:text="Click Here"
        android:textColor="@color/black"
        android:textSize="120dp"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="1549dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="541dp"
        android:layout_height="204dp"
        android:text="Sign-up"
        android:textSize="100dp"
        android:textColor="@color/white"

        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="1255dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
