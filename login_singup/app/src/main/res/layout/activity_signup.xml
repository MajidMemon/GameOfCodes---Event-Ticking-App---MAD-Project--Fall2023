<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/SignIn"
    android:padding="16dp"
    tools:context=".loginActivity">

  <EditText
      android:id="@+id/loginUsername"
      android:layout_width="1804dp"
      android:layout_height="150dp"
      android:background="@drawable/edittext_border"
      android:hint="Username"
      android:padding="12dp"
      tools:layout_editor_absoluteX="146dp"
      tools:layout_editor_absoluteY="1397dp" />

  <EditText
      android:id="@+id/loginPassword"
      android:layout_width="1804dp"
      android:layout_height="150dp"
      android:background="@drawable/edittext_border"
      android:hint="Password"
      android:inputType="textPassword"
      android:padding="12dp"
      tools:layout_editor_absoluteX="146dp"
      tools:layout_editor_absoluteY="1875dp" />

  <Button
      android:id="@+id/loginButton"
      android:layout_width="2274dp"
      android:layout_height="322dp"
      android:text="Login"
      android:textSize="200dp"

      tools:layout_editor_absoluteX="80dp"
      tools:layout_editor_absoluteY="2980dp" />

  <TextView
      android:id="@+id/signupRedirect"
      android:layout_width="804dp"
      android:layout_height="273dp"
      android:gravity="center"
      android:text="Click Here"
      android:textColor="@color/black"
      android:textSize="120dp"
      tools:layout_editor_absoluteX="842dp"
      tools:layout_editor_absoluteY="2341dp" />
  <!-- Additional layout elements can be added here -->

</androidx.constraintlayout.widget.ConstraintLayout>
